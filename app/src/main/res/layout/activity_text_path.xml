<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hao.haoview.ademo.TextPathActivity">

    <com.hao.haoview.TextView.TextPathView
        android:id="@+id/text_path_1_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_path_2_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.hao.haoview.TextView.TextPathView
        android:id="@+id/text_path_2_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/text_path_1_txt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
